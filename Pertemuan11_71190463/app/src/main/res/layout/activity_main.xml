<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sub_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="Data Mahasiswa" />

    <EditText
        android:id="@+id/nama_maha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nama Mahasiswa" />

    <EditText
        android:id="@+id/nim_maha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NIM Mahasiswa"
        android:inputType="number" />

    <EditText
        android:id="@+id/ipk_maha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nilai IPK"
        android:inputType="number" />

    <Button
        android:id="@+id/sub_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan Data" />

    <TextView
        android:id="@+id/scr_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="Search Mahasiswa" />

    <EditText
        android:id="@+id/scr_maha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Cari Mahasiswa......" />

    <Button
        android:id="@+id/scr_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cari" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/asc_ding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assending" />

        <RadioButton
            android:id="@+id/dsc_ding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desending" />

    </LinearLayout>

    <TextView
        android:id="@+id/res_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

</LinearLayout>